<Page x:Class="LCModManager.ManageModsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LCModManager"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ManageModsPage">

    <Grid x:Name="MainGrid" Width="{Binding ActualWidth, ElementName=page, Mode=OneWay}" >
        <ToolBar ToolBarTray.IsLocked="True" VerticalAlignment="Top" Height="25" FontSize="12" Width="{Binding ActualWidth, ElementName=MainGrid, Mode=OneWay}" Grid.ColumnSpan="2">
            <Button HorizontalAlignment="Left" VerticalAlignment="Top" Height="20" Width="20" Margin="1">
                <Image Height="12" Width="12" Source="/Resources/Green_Plus.png" ></Image>
            </Button>


        </ToolBar>
        <ListView d:ItemsSource="{d:SampleData ItemCount=5}" Margin="0,25,0,0">
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>



    </Grid>
</Page>
